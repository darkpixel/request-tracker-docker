set postmaster "${OWNER_EMAIL}"
set nospambounce
set softbounce

poll imap.gmail.com with proto IMAP
  user '${MAIL_FETCH_LOGIN}' there with password '${MAIL_FETCH_PASSWORD}'
  options keep ssl mda "/opt/rt4/bin/rt-mailgate --url ${WEB_BASE_URL} --queue general --action correspond"
  folder ${MAIL_FETCH_FOLDER}

poll imap.gmail.com with proto IMAP
  user '${MAIL_FETCH_LOGIN}' there with password '${MAIL_FETCH_PASSWORD}'
  options keep ssl mda "/opt/rt4/bin/rt-mailgate --url ${WEB_BASE_URL} --queue general --action comment"
  folder ${MAIL_FETCH_COMMENT_FOLDER}
